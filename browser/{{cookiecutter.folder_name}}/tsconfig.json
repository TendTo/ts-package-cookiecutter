{
    "compilerOptions": {
        "lib": [
            "ES6",
            "dom"
        ],
        "target": "ES6",
        "module": "CommonJS",
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "declarationDir": "lib/cjs",
        "forceConsistentCasingInFileNames": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "types": [
            "mocha"
        ],
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "test/"
    ]
}